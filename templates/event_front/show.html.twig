{% extends 'base-front.html.twig' %}

{% block title %}Détails Evenement{% endblock %}

{% block body %}



    <a style="margin-left: 5px" href="" class="btn hvr-hover" data-fancybox-close=""
       >Retour En Arrière</a>



    <div class="title-all text-center">
        <h1>Détails Evenement</h1>
    </div>







    <div class="row">
        <div class="col-xl-5 col-lg-5 col-md-6">
            <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active"><img class="d-block w-100"
                                                           src={{ asset('uploads/personnes/' ~ evenement.image1) }}>
                    </div>
                    <div class="carousel-item"><img class="d-block w-100"
                                                    src={{ asset('uploads/personnes/' ~ evenement.image1) }}></div>
                    <div class="carousel-item"><img class="d-block w-100"
                                                    src={{ asset('uploads/personnes/' ~ evenement.image1) }}></div>
                </div>
                <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ evenement.image1) }} alt="">
                    </li>
                    <li data-target="#carousel-example-1" data-slide-to="1" class="">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ evenement.image1) }} alt="">
                    </li>
                    <li data-target="#carousel-example-1" data-slide-to="2" class="">
                        <img class="d-block w-100 img-fluid"
                             src={{ asset('uploads/personnes/' ~ evenement.image1) }} alt="">
                    </li>
                </ol>
            </div>
        </div>
        <div class="col-xl-7 col-lg-7 col-md-6">
            <div class="single-product-details">
                    <h4>Nom Evenement:</h4>
                    <h5>{{ evenement.NomEvent }}</h5>
                    <h4>Prix D'entrée Evenement:</h4>
                    <h5> {{ evenement.PrixEntre }}</h5>
                    <h4>Informations Evenement:</h4>
                    <h5 class="available-stock"><span>{{ evenement.CapaciteEvent }} Tickets Sont Disponibles / <a
                                href="#">{{ evenement.nbrTicketAchete }} Achetés </a></span></h5>
                    <h4>Adresse Evenement:</h4>
                    <h5> {{ evenement.AdresseEvent }}</h5>

                    <h4>Date Début Evènement:</h4>
                    <h5>{{ evenement.DateDebutEvent ? evenement.DateDebutEvent|date('Y-m-d H:i:s') : '' }}</h5>

                    <h4>Date Fin Evenement:</h4>
                    <h5>{{ evenement.DateFinEvent ? evenement.DateFinEvent|date('Y-m-d H:i:s') : '' }}</h5>
                     <div class="price-box-bar">
                     <div class="cart-and-bay-btn">
                        {% if evenement.CapaciteEvent > evenement.nbrTicketAchete %}
                            <a class="btn hvr-hover" data-fancybox-close="" href="/ev/front/Achat/{{ evenement.id }}">Acheter Ticket</a>
                        {% else %}
                            <button  class="primary" disabled style="background-color: red;color: #fff" href="#">Pas De Tickets Disponibles</button>
                        {% endif %}
                        {% if evenement.CapaciteEvent > evenement.nbrTicketAchete %}
                            <a class="btn hvr-hover" data-fancybox-close="" href="/ev/front/Reservation/{{ evenement.id }}">Réserver Ticket</a>
                        {% else %}
                            <button  class="primary" disabled style="background-color: red;color: #fff" href="#">Pas De Tickets Disponibles</button>
                        {% endif %}
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}
